<div class="row">
    <div class="col s12 m8">
        <h3>{{blog.title}}
            <small>{{{editIcon blog.postedBy user blog._id false}}}</small>
        </h3>
        <div class="card blog">
            <div class="card-image">
                <img src="{{blog.image}}">
            </div>
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{blog.body}}}
            </div>
            <h6 style="padding:10px">Comments:</h6>
            {{#each blog.comments}}
            <div style="padding:10px">
                <h6 style="display:flex;align-items:center;">
                    <img src="{{postedBy.image}}" style="border-radius: 50%;width:30px;height:30px;">
                    <span style="margin-left:5px">
                        {{postedBy.displayName}} :
                    </span>
                    {{text}}
                </h6>
            </div>
            {{/each}}
        </div>
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">Add Comment</span>
                <form class="mb-3" action="/blogs/{{blog._id}}/comment" method="POST">
                    <div class="mb-3">
                        <textarea name="text" cols="30" rows="10" id="comment"></textarea>
                    </div>
                    <button class="btn btn-success" type="submit">Submit</button>
                </form>
            </div>
            <div class="card-action">
                <a href="#">This is a link</a>
                <a href="#">This is a link</a>
            </div>
        </div>
    </div>
    <div class="col s12 m4" id="user-card">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{blog.postedBy.displayName}}</span>
                <img src="{{blog.postedBy.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/stories/postedBy/{{blog.postedBy._id}}">More From {{blog.postedBy.firstName}}</a>
            </div>
        </div>
    </div>
</div>
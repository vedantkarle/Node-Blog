<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>
<p>Here are your blogs</p>

{{#if blogs}}
<table class="striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
            <th>Likes</th>
            <th>Comments</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each blogs}}
        <tr>
            <td><a href="/blogs/{{_id}}">{{title}}</a></td>
            <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
            <td><span class="dash-status">{{status}}</span></td>
            <td>{{likes.length}}</td>
            <td>{{comments.length}}</td>
            <td>
                <a href="/blogs/edit/{{_id}}" class="btn btn-float">
                    <i class="fas fa-edit"></i>
                </a>
                <form action="/blogs/{{_id}}?_method=DELETE" method="POST" id="delete-form">
                    <button class="btn red" type="submit">
                        <i class="fas fa-trash"></i>
                    </button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>You have not created any blogs!</p>
{{/if}}